# =============================
# Backend Environment Template
# =============================
# Rename this file to .env and adjust values for local development.
# Never commit real secrets.

# --- Authentication ---
SECRET_KEY=change_me_dev_only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- App Metadata ---
APP_NAME=CMMS System
APP_VERSION=1.0.0
APP_DESCRIPTION=CMMS system for industrial maintenance
DEBUG=true
HOST=0.0.0.0
PORT=8000
APP_PORT=8000

# --- CORS (JSON array of allowed origins) ---
CORS_ORIGINS=["http://localhost:3000"]

# --- PostgreSQL (Local) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gmao
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/gmao

# --- PostgreSQL (Docker internal) ---
POSTGRES_URL_DOCKER=postgresql+asyncpg://postgres:postgres@db:5432/gmao

# --- MongoDB (Future IoT) ---
MONGODB_URL=mongodb://localhost:27017
MONGODB_URL_DOCKER=mongodb://mongo:27017
MONGODB_DB=gmao_sensors
MONGODB_PORT=27017

# --- Optional Logging ---
# LOG_LEVEL=info

# --- Optional Feature Flags ---
# ENABLE_SENSOR_MODULE=false
